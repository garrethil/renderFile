<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card my-5">
        <div class="card-body">
          <h2 class="card-title">{{postData.title}}</h2>
          <p class="card-text">{{postData.desc}}</p>
          <div class="embed-responsive embed-responsive-16by9 mb-3">
            <iframe class="embed-responsive-item" src="{{postData.url}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
          <p class="card-text">{{postData.details}}</p>
        </div>
      </div>
    </div>
  </div>
</div>